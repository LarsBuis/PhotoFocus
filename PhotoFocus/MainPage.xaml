<?xml version="1.0" encoding="utf-8"?>
<TabbedPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PhotoFocus.MVVM.Views"
    x:Class="PhotoFocus.MainPage">

    <!-- Each tab is wrapped in a NavigationPage if you want 
         per-tab navigation stacks. -->
    <TabbedPage.Children>
        <NavigationPage Title="Home">
            <x:Arguments>
                <views:HomePage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Challenges">
            <x:Arguments>
                <views:ChallengesPage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Profile">
            <x:Arguments>
                <views:ProfilePage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Upload">
            <x:Arguments>
                <views:UploadPhotoPage />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>
