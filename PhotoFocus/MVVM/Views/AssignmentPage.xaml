<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PhotoFocus.MVVM.ViewModels"
             x:Class="PhotoFocus.MVVM.Views.AssignmentPage"
             Title="Assignments">
    <ContentPage.BindingContext>
        <vm:AssignmentPageViewModel/>
    </ContentPage.BindingContext>
    <Grid>
        <!-- List of Assignments -->
        <CollectionView ItemsSource="{Binding Assignments}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10"
                           Padding="10"
                           CornerRadius="10"
                           HasShadow="True">
                        <Label Text="{Binding Title}"
                               FontSize="Medium" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Floating Action Button -->
        <Button Text="+"
                Command="{Binding NavigateToCreateAssignmentCommand}"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="#333"
                TextColor="White"
                FontSize="Large"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20"/>
    </Grid>
</ContentPage>
