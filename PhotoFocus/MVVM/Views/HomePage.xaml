<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:PhotoFocus.MVVM.ViewModels"
    x:Class="PhotoFocus.MVVM.Views.HomePage"
    NavigationPage.HasNavigationBar="False"
    BackgroundColor="#222431">

    <Grid>
        <ScrollView VerticalOptions="FillAndExpand">
            <VerticalStackLayout Padding="20" Spacing="10">

                <Button Text="Filter"
                        Command="{Binding FilterCommand}"
                        BackgroundColor="#333"
                        TextColor="White"
                        Padding="10"
                        CornerRadius="15" />

                <Label Text="{Binding FilterTitle}"
                       FontAttributes="Bold"
                       FontSize="24"
                       TextColor="White" />

                <VerticalStackLayout
                    BindableLayout.ItemsSource="{Binding FilteredPhotos}"
                    Spacing="10">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout Padding="5">
                                <Image Source="{Binding Photo.FilePath}"
                                       HeightRequest="150"
                                       Aspect="AspectFill" />

                                <Label Text="{Binding User.Username}"
                                       FontAttributes="Bold"
                                       TextColor="White" />

                                <Label Text="{Binding Photo.UploadedAt, StringFormat='{0:dd MMM yyyy HH:mm}'}"
                                       FontSize="12"
                                       TextColor="LightGray" />

                                <Label Text="{Binding Category.Name}"
                                       FontSize="12"
                                       TextColor="LightGray" />

                                <Label Text="{Binding LikeCount}"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="14" />

                                <Button Command="{Binding ToggleLikeCommand}"
                                        BackgroundColor="#333"
                                        TextColor="White"
                                        Padding="5"
                                        CornerRadius="10">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button" Binding="{Binding HasLiked}" Value="true">
                                            <Setter Property="Text" Value="Unlike" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Button" Binding="{Binding HasLiked}" Value="false">
                                            <Setter Property="Text" Value="Like" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <Button Text="+"
                Command="{Binding AddPhotoCommand}"
                BackgroundColor="#333"
                TextColor="White"
                FontSize="30"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="0,0,20,20" />
    </Grid>
</ContentPage>
