<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoFocus.MVVM.Views.ProfilePage"
             Title="Profile">

    <VerticalStackLayout Padding="20" Spacing="25">

        <!-- Example title -->
        <Label Text="Profile Page"
               FontSize="24"
               HorizontalOptions="Center" />

        <!-- Display the user's profile picture -->
        <Image Source="{Binding CurrentUser.ProfilePictureUrl}"
               HeightRequest="100"
               WidthRequest="100"
               Aspect="AspectFill"
               HorizontalOptions="Center" />

        <!-- Display the user's username -->
        <Label Text="{Binding CurrentUser.Username}"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Button to change profile picture -->
        <Button Text="Change Profile Picture"
                Command="{Binding ChangeProfilePictureCommand}" />

        <!-- New: Logout button -->
        <Button Text="Logout"
                Command="{Binding LogoutCommand}"
                BackgroundColor="Red"
                TextColor="White"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
