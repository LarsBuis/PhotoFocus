<?xml version="1.0" encoding="utf-8"?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PhotoFocus.MVVM.Views.UploadPhotoPage"
    xmlns:viewmodels="clr-namespace:PhotoFocus.MVVM.ViewModels">

    <ContentPage.BindingContext>
        <viewmodels:UploadPhotoViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="10">

        <!-- Display selected image preview (if any) -->
        <Image Source="{Binding SelectedImagePath}" 
               HeightRequest="200"
               Aspect="AspectFill" />

        <!-- Button to pick or capture a photo -->
        <Button Text="Pick Photo" Command="{Binding PickPhotoCommand}" />
        <Button Text="Take Photo" Command="{Binding TakePhotoCommand}" />

        <!-- Category Picker -->
        <Label Text="Select Category" />
        <Picker ItemsSource="{Binding Categories}"
                ItemDisplayBinding="{Binding Name}"
                SelectedItem="{Binding SelectedCategory}"
                Title="Choose category" />

        <!-- Upload button -->
        <Button Text="Upload Photo" Command="{Binding UploadCommand}" />

        <Label Text="{Binding Message}" TextColor="Red" />

    </VerticalStackLayout>
</ContentPage>
