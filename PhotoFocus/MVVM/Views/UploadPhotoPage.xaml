<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:PhotoFocus.MVVM.ViewModels"
             x:Class="PhotoFocus.MVVM.Views.UploadPhotoPage">

    <ContentPage.BindingContext>
        <viewModels:UploadPhotoViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20">

        <Picker ItemsSource="{Binding Categories}"
                ItemDisplayBinding="{Binding Name}"
                SelectedItem="{Binding SelectedCategory}"
                Title="Select Category" />

        <Button Text="Pick Photo"
                Command="{Binding PickPhotoCommand}" />
        <Button Text="Take Photo"
                Command="{Binding TakePhotoCommand}" />

        <Button Text="Generate Image from Pexels"
        Command="{Binding GeneratePexelsImageCommand}"
        IsVisible="{Binding IsGenerateImageVisible}" />


        <Button Text="Upload"
                Command="{Binding UploadCommand}" />

        <Image Source="{Binding SelectedImagePath}" 
               Aspect="AspectFill" 
               HeightRequest="200" />

        <Label Text="{Binding Message}" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>
